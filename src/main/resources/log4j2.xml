<configuration>

    <!-- Splunk Appender -->
    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">


        <url>${splunk.url=https://localhost:8088}</url>
        <token>${}</token>
        <index>${instant_order_dev}</index>
        <source>${instant_order_logs}</source>
        <sourcetype>${_json}</sourcetype>

        <!-- Optional Settings -->
        <disableCertificateValidation>true</disableCertificateValidation>
        <batch_size_count>1</batch_size_count>
        <batch_interval>0</batch_interval>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%thread] %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- Console appender for local debugging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="SPLUNK" />
    </root>

</configuration>